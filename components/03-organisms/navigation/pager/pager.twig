
{#
 # Available variables:
 # - pager__base_class - base classname of the wrapper.
 # - pager__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 # - pager__modifiers - array of modifiers to add to the base classname of the wrapper.
 # - pager__name - name of the pager.
 # - pager__attributes - array of attributes for the nav.
 # - pager__additional_classes - array of classes in addition to bem structure.
 # - items: A nested list of pager items. Each pager item contains:
 #   - title: The pager title.
 #   - url: The optional pager link url.
 #   - aria_label: The optional aria label to provide additional accessibility context for items like 'Prev' and 'Next'
 #   - supplemental: TRUE if you want to add an optional span tag for items like ellipsis.
 #   - is_active: TRUE if the link is the current page
 #}

{% set pager__base_class = 'pager' %}

{% set pager__attributes = {
  'class': bem(pager__base_class, pager__modifiers, pager__blockname),
} %}

{% set pager__items = pager__items|default(items) %}

<div {{ add_attributes(pager__attributes) }}>
  {% include "@molecules/navigation/menu.twig" with {
    items: pager__items,
    menu__base_class: pager__base_class,
    menu__name: 'Pagination',
    menu__list__type: 'ul',
  } %}
</div>
