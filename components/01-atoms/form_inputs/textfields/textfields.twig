<div class="form_item">
	<label for="edit-name" class="form_item__label form_item__label--required form_item__label--textfield">Name</label>
	<input id="edit-name" autocorrect="none" autocapitalize="none" spellcheck="false" type="text" name="name" value="" size="60" maxlength="60" class="form_item__textfield form-item__textfield--required" required="required" aria-required="true" placeholder="First, Middle, Last">
</div>

<div class="form_item">
	<label for="edit-pass" class="form_item__label form_item__label--required form_item__label--textfield">Password</label>
	<input id="edit-pass" type="password" name="pass" size="60" maxlength="128" class="form_item__textfield form_item__textfield--password form_item__textfield--required" required="required" aria-required="true">
	<div class="form_item__description">
		Enter the password that accompanies your username.
	</div>
</div>

<fieldset class="form_fieldset">
	<legend class="heading-2 with-icon">Web and Email Address (fieldset example)</legend>
	<div class="form_item">
		<label for="webaddress" class="form_item__label form_item__label--textfield">Web Address</label>
		<input id="webaddress" type="url" class="form_item__textfield" placeholder="http://yoursite.com">
	</div>

	<div class="form_item">
		<label for="emailaddress" class="form_item__label form_item__label--textfield">Email Address</label>
		<input id="emailaddress" type="email" class="form_item__textfield" placeholder="name@email.com">
	</div>
</fieldset>

<div class="form_item">
	<label for="text" class="form_item__label form_item__label--textfield">Number Input</label>
	<input id="text" type="number" class="form_item__textfield" placeholder="Enter a Number" pattern="[0-9]*">
</div>

<div class="form_item">
	<label for="text" class="form_item__label form_item__label--textfield">Date Picker</label>
	<input id="date" type="date" class="form_item__textfield" placeholder="Enter a Date" pattern="[0-9]*">
</div>

<div class="form_item form_item--error">
	<label for="text" class="form_item__label form_item__label--textfield">Error</label>
    <div class="form_item__inner">
	<input id="error" type="error" class="form_item__textfield" placeholder="this question is required" aria-describedby="field-with-error" aria-invalid="true">
	{% include "@atoms/images/icons/_icon.twig" with {
      icon__base_class: "icon",
      icon__blockname: "infoAlert",
      icon__name: "infoAlert",
    } %}
	</div>
	<div id="field-with-error" class="form_error__description">this question is required</div>
</div>

<div class="form_item">
	<label for="textarea" class="form_item__label form_item__label--textfield">Textarea</label>
	<textarea id="textarea" class="form_item__textarea" rows="8" cols="48" placeholder="Enter your message here"></textarea>
</div>

<div class="form_item">
	<div data-drupal-selector="edit-actions" class="form-actions js-form-wrapper form-wrapper" id="edit-actions--3tAlgvIhsT0">
		<input data-bef-auto-submit-click="" data-drupal-selector="edit-submit-products-pz5omq-ruao" type="submit" id="edit-submit-products--Pz5omq_ruAo" value="Apply" class="button form-submit">
		<input data-drupal-selector="edit-reset" type="submit" id="edit-reset--ma-61ZY7oF4" name="op" value="Reset Results" class="button form-submit">
	</div>
</div>
